#define S(base,x,y) base[(5*((x) % 5) + ((y) % 5))]

inline fn __ROL64(reg u64 x, inline int c) -> reg u64
{
  reg u64 y;

  if (c == 0)
  { y = x; }
  else
  { _, _, y = #ROL_64(x, c); }
  return y;
}

inline fn __theta_sum_scalar(stack u64[25] a) -> reg u64[5]
{
  inline int i j;
  reg u64[5] c;

  for i=0 to 5
  { c[i] = S(a, 0, i); }

  for j=1 to 5
  { for i=0 to 5
    { c[i] ^= S(a, j, i); }
  }

  return c;
}

inline fn __theta_rol_scalar(reg u64[5] c) -> reg u64[5]
{
  inline int i;
  reg u64[5] d;
  reg u64 t r;

  for i = 0 to 5
  { d[i] = c[(i+1)%5];
    _, _, d[i] = #ROL_64(d[i], 1);
    d[i] ^= c[(i+4)%5];
  }

  return d;
}

inline fn __rol_sum_scalar(
  reg u64[5] d,
  stack u64[25] a,
  inline int offset
) -> reg u64[5]
{
  inline int j j1 k;
  reg u64[5] c;
  reg u64 t;

  for j = 0 to 5
  {
    j1 = (j+offset) % 5;
    k = __rhotates(j1, j);
    t = S(a,j,j1);
    t ^= d[j1];
    t = __ROL64(t, k);
    c[j] = t;
  }

  return c;
}

inline fn __set_row_scalar(
  stack u64[25] r,
  inline int row,
  reg u64[5] c,
  reg u64 iota
) -> stack u64[25]
{
  inline int j j1 j2;
  reg u64 t;

  for j= 0 to 5
  {
    j1 = (j+1) % 5;
    j2 = (j+2) % 5;
    t = !c[j1] & c[j2];
    if row==0 && j==0 { t ^= iota; }
    t ^= c[j];
    S(r, row, j) = t;
  }

  return r;
}

inline fn __round2x_scalar(stack u64[25] a r, reg u64 iota) -> stack u64[25], stack u64[25]
{
  reg u64[5] c d;

  c = __theta_sum_scalar(a);
  d = __theta_rol_scalar(c);
  c = __rol_sum_scalar(d, a, 0);
  r = __set_row_scalar(r, 0, c, iota);
  c = __rol_sum_scalar(d, a, 3);
  r = __set_row_scalar(r, 1, c, iota);
  c = __rol_sum_scalar(d, a, 1);
  r = __set_row_scalar(r, 2, c, iota);
  c = __rol_sum_scalar(d, a, 4);
  r = __set_row_scalar(r, 3, c, iota);
  c = __rol_sum_scalar(d, a, 2);
  r = __set_row_scalar(r, 4, c, iota);

  return a, r;
}

inline fn __get_iota_scalar(reg ptr u64[25] sp, reg u64 round) -> stack u64
{
  reg ptr u64[25] p;
  stack u64 sv;
  reg u64 v;

  p = sp;
  v = p[(int)round];
  sv = v;

  return sv;
}

inline fn __keccakf1600_scalar(stack u64[25] a) -> stack u64[25]
{
  stack u64[25] r;
  reg ptr u64[24] iotas_p;
  reg u64 iota round;

  iotas_p = KECCAK_RC;
  round = 0;

  while(round < 24)
  {
    iota = iotas_p[(int) round];
    a, r = __round2x_scalar(a, r, iota);
    round += 1;

    iota = iotas_p[(int) round];
    r, a = __round2x_scalar(r, a, iota);
    round += 1;
  }

  return a;
}

