// obs: @pre: inlen < rate_in_bytes
fn add_final_block(
  _state_t state,
  reg   u64 in,
  reg   u64 inlen,
  reg   u8  trail_byte,
  reg   u64 rate
) -> _state_t
{
  reg u64 i t inlen8;
  reg u8 c;

  inlen8 = inlen;
  inlen8 >>= 3;
  i = 0;
  while ( i < inlen8 )
  {
    t = [in + 8*i];
    B(state,i) ^= t;
    i += 1;
  }

  #if 0
