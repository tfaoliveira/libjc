#include "theta.jazz"

fn test_theta_from_register() -> reg u64[25]
{
  inline int i;
  reg u64[25] state;

  for i=0 to 25
  { state[i] = -1;
    state[i] <<= i;
  }

  state = theta(state);

  return state;
}

