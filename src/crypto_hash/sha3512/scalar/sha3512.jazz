#ifndef CRYPTO_HASH_SHA3512_SCALAR
#define CRYPTO_HASH_SHA3512_SCALAR

#include "crypto_hash/keccak1600/scalar/keccak1600.jazz"

inline fn __sha3512_scalar(reg u64 out in inlen)
{
  reg u64 outlen rate;
  reg u8 trail_byte;

  outlen = (512/8);
  trail_byte = 0x6;
  rate = (576/8);

  _keccak1600_scalar(out, outlen, in, inlen, trail_byte, rate);
}

#ifdef EXPORT

export fn sha3512_scalar(reg u64 out in inlen)
{
  __sha3512_scalar(out, in, inlen);
}

#endif

#endif
